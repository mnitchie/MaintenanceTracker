<button id="createCarButton" class="btn btn-primary" data-toggle="modal" data-target="#newCarModal">Add a new car</button>

<div class="modal fade" id="newCarModal" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
				<h4 class="modal-title">Add a New Car</h4>
			</div>
			<div class="modal-body form-inline">
				{{bootstrap-select default="Select Year"  selected=selectedYear  items=validYears  changed=(action "yearSelected")}}
				{{bootstrap-select default="Select Make"  selected=selectedMake  items=validMakes  changed=(action "makeSelected")}}
				{{bootstrap-select default="Select Model" selected=selectedModel items=validModels changed=(action "modelSelected")}}

				{{#if isLoading}}
					<img src="images/ajax-loader.gif">
				{{/if}}
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				<button type="button" class="btn btn-primary" data-dismiss="modal" disabled={{canSubmit}} {{action "saveButtonClicked"}}>Save</button>
			</div>
		</div>
	</div>
</div>
